<?xml version="1.0" encoding="utf-8"?>
<!-- res/color/nav_icon_tint.xml -->
<!--
    This is a color selector for bottom navigation icons.
    It changes the icon color depending on whether the tab is selected or not.
-->

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Icon color when the tab is selected (checked) -->
    <item android:color="#FF7A00" android:state_checked="true"/>

    <!-- Default icon color when the tab is not selected -->
    <item android:color="#161616"/>

</selector>
