<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Pantry"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000" />

    <!-- Premium content container -->
    <LinearLayout
        android:id="@+id/layoutPremium"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_below="@id/textTitle"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editItem"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="Add item"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:background="@drawable/bg_edittext"
                android:textColor="#000" />

            <ImageButton
                android:id="@+id/buttonAdd"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_add"
                android:contentDescription="Add" />
        </LinearLayout>

        <TextView
            android:id="@+id/textPantryLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Pantry Items"
            android:textStyle="bold"
            android:textColor="#000" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerPantry"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textSuggestedLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suggested Recipes"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginTop="12dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerRecipes"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- Non-premium container -->
    <LinearLayout
        android:id="@+id/layoutNonPremium"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        android:layout_below="@id/textTitle">

        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/ic_lock" />

        <TextView
            android:id="@+id/textLocked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upgrade to Premium to access Pantry Management"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="16sp"
            android:paddingTop="12dp" />

        <Button
            android:id="@+id/buttonUpgrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_button_orange"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Upgrade to Premium" />
    </LinearLayout>

    <!-- Bottom nav similar to Home -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/orange_primary"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp"
            android:src="@drawable/ic_home" />

        <ImageView
            android:id="@+id/navBrowse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp"
            android:src="@drawable/ic_browse" />

        <ImageView
            android:id="@+id/navSubstitute"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp"
            android:src="@drawable/ic_substitute" />

        <ImageView
            android:id="@+id/navPantry"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp"
            android:src="@drawable/ic_pantry" />
    </LinearLayout>

</RelativeLayout>


