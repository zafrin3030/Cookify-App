<?xml version="1.0" encoding="utf-8"?>
<!--
    This drawable defines a rectangle with:
    - White background
    - Rounded corners
    - Thin border (stroke)
    - Inner padding
    It can be used for buttons, cards, or input fields.
-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Solid fill color -->
    <solid android:color="#FFFFFFFF" /> <!-- White background with full opacity -->

    <!-- Rounded corners -->
    <corners android:radius="12dp" />   <!-- 12dp corner radius -->

    <!-- Border around the shape -->
    <stroke
        android:width="1dp"
    android:color="#22000000" />    <!-- Slightly transparent black border -->

    <!-- Padding inside the shape -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />        <!-- Inner spacing for content -->
</shape>

